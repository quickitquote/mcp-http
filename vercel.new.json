{
    "version": 2,
    "builds": [
        {
            "src": "src/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/mcp.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/mcp",
            "dest": "/src/mcp.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/src/server.js"
        }
    ]
}